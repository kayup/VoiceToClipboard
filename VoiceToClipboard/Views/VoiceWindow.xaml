<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceToClipboard.Views.VoiceWindow"
             Title="VoiceWindow">
    <VerticalStackLayout Padding="20">
        <Label x:Name="RecognitionResultLabel" Text="音声認識の結果" FontSize="18"/>
        <Button x:Name="PasteButton"
        Text="クリップボードに貼り付け"
        FontSize="18"
        TextColor="White"
        BackgroundColor="#1976D2"
        CornerRadius="8"
        Padding="12">
            <Button.Shadow>
                <Shadow Brush="Black" Offset="3,3" Radius="6" Opacity="0.4" />
            </Button.Shadow>
        </Button>
    </VerticalStackLayout>
</ContentPage>